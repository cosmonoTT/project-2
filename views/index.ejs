<!DOCTYPE html>
<html lang="en">
<%- include('./partials/header.ejs') %>
  <body>
    <%- include ('./partials/nav.ejs') %>
    <h1>Product Index Page</h1>
    <table>
      <% for (let i = 0; i < products.length; i++) { %>
      <tr>
        <td>
        <a href="/products/<%=products[i].id%>"> <%= products[i].name %> </a>
        </td>
        <td>
          <form action="/products/favorites/<%=products[i].id%>?_method=PUT" method="POST">
          <input type="submit" value="Add To Favorites">
          </form>
        </td>
        <td>
        <form
          action="/products/<%=products[i].id%>?_method=DELETE"
          method="POST"
        >
          <input type="submit" value="DELETE" />
        </form>
        </td>
        <td>
        <form action="/products/<%=products[i].id%>/edit">
          <input type="submit" value="EDIT" />
        </form>
        </td>
      </tr>
      <br>
      <% } %>
    </table>
  </body>
</html>
