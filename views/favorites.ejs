<!DOCTYPE html>
<html lang="en">
<%- include('./partials/header.ejs') %>
<body>
    <%- include('./partials/nav.ejs') %>
    <h4>Favorites</h4>
    <table>

        <% for (let i = 0; i < favProds.length; i++) { %>
        <tr>
            <td>
                <a href="/products/<%=favProds[i].id%>">
                    <%= favProds[i].name %>  
                </a>
            </td>
            <td>
                <form action="/products/favorites/<%=favProds[i].id%>/remove?_method=PUT" method="POST">
                    <input type="submit" value="Remove From Favorites">
                    </form>
            </td>
        </tr>
        <% } %>
    </table>
</body>
</html>